@model List<Customer>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Customer List</h3>

<div class="row">
    <div class="col-4">
        @await Component.InvokeAsync("News")
    </div>
    <div class="col-8">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Age</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Age</td>
                        <td>

                            <a asp-controller="Home" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                            <a asp-controller="Home" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger">Remove </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="Create" asp-controller="Home" class="btn btn-secondary mb-3">Create</a>

    </div>
</div>


