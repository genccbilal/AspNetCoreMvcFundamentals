@model DirectoryInfo[];

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<a asp-action="Create" class="btn btn-secondary mb-3">Create</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Creation  Time</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.CreationTime</td>
                <td>@item.FullName</td>
                <td>
                    <a asp-action="Remove" asp-route-folderName="@item.Name" class="btn btn-danger">Remove</a>
                </td>
            </tr>
        }


    </tbody>

</table>